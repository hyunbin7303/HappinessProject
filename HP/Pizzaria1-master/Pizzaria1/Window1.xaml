<Window x:Class="Pizzaria1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzaria1"
        mc:Ignorable="d"
        Title="Window1" Height="250" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Margin="10" Foreground="Blue">
			Current Goal<LineBreak />
			40% work is done.
            </TextBlock>
            <Grid Margin="20" >
                <ProgressBar Minimum="0" Maximum="100" Name="pbStatus"  Value="40" Margin="20,20,20,20"/>
            </Grid>
            <Button x:Name="Btn_ProgressBar" Width="200" Content="Start"></Button>

        </StackPanel>

    </Grid>
</Window>
